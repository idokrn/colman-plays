<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Panel</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" >
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="main-navbar">
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
            <div class="container">
                <a class="navbar-brand" href="/">Colman Plays</a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarContent">
                    <form action="/search" method="GET" class="d-flex mx-auto" style="max-width: 500px;">
                        <input class="form-control me-2" type="search" name="query" placeholder="Search for products..." required>
                        <button class="btn btn-outline-light" type="submit">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </form>
                    
                    <div class="navbar-nav ms-auto">
                       
                        <a href="/my" class="nav-link">
                            <i class="fas fa-user"></i> Profile
                        </a>
                        
                        <a href="/cart" class="nav-link">
                            <i class="fas fa-shopping-cart"></i> Cart
                        </a>
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="catalogDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-th-list"></i> Catalog
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="catalogDropdown">
                                <li><a class="dropdown-item" href="/category/AllProducts">All Products</a></li>
                                <li><a class="dropdown-item" href="/category/Graphicscards">Graphics cards</a></li>
                                <li><a class="dropdown-item" href="/category/Processors">Processors</a></li>
                                <li><a class="dropdown-item" href="/category/Motherboards">Motherboards</a></li>
                                <li><a class="dropdown-item" href="/category/MemoryForPC">Memory For PC</a></li>
                                <li><a class="dropdown-item" href="/category/SuggestedGamingPCSystems">Suggested Gaming PC Systems</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#profile">
                                <i class="bi bi-person"></i> Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#purchases">
                                <i class="bi bi-bag"></i> Purchases
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">User Panel</h1>
                </div>

                <!-- Profile Section -->
                <section id="profile">
                    <h2>Profile Information</h2>
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" value=<%= user.name %> readonly>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" value=<%= user.email %> readonly>
                        </div>
                    </form>
                </section>

                <!-- Purchases Section -->
                <section id="purchases" class="mt-5">
                    <h2>Past Purchases</h2>
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Date</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <% for (const cart of history) { %>
                            <tbody>
                                    <td><%= cart.id %></td>
                                    <td><%= cart.purchase_date.getDate() + "-" + (cart.purchase_date.getMonth() + 1) + "-" + cart.purchase_date.getFullYear()  %></td>
                                    <td><%= cart.total + "$" %></td>
                            </tbody>
                            <% } %>
                        </table>
                    </div>
                </section>
            </main>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>